{
  "name": "mango-board-express",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod;",
    "server": "node ./dist-server/bin/www;",
    "transpile": "babel ./server --out-dir dist-server;",
    "prod": "NODE_ENV=production npm run build && npm run server;",
    "dev": "NODE_ENV=development npm run build && npm run server;",
    "clean": "rimraf dist-server;",
    "build": "npm run clean && npm run transpile;",
    "watch:dev": "nodemon;"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-session": "^1.17.0",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "pug": "3.0.1",
    "rimraf": "^3.0.2",
    "sqlite3": "^4.1.1"
  }
}
